<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="TestStore" transaction-type="RESOURCE_LOCAL">
		<class>com.teststore.database.Brand</class>
		<class>com.teststore.database.Good</class>
		<class>com.teststore.database.GoodsInOrder</class>
		<class>com.teststore.database.Image</class>
		<class>com.teststore.database.OrderStatus</class>
		<class>com.teststore.database.OrderStatusesType</class>
		<class>com.teststore.database.Order</class>
		<class>com.teststore.database.ProductCategory</class>
		<class>com.teststore.database.SiteUser</class>
		<class>com.teststore.database.UserRole</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/store_test?useUnicode=yes&amp;characterEncoding=UTF-8"/>
			<property name="javax.persistence.jdbc.user" value="rootroot"/>
			<property name="javax.persistence.jdbc.password" value="rootroot"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
